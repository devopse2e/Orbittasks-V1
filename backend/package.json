{
  "name": "orbittasks-backend",
  "version": "1.0.0",
  "description": "Todo API Backend",
  "main": "api/index.js",  
  "scripts": {
    "start": "node api/index.js",
    "dev": "nodemon server.js",  
    "test": "jest",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit --coverage --coverageReporters=cobertura"
  },
  "engines": {  
    "node": "18.x"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "chrono-node": "^2.8.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "jest": "^29.6.1",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "coverageReporters": [
      "text",
      "text-summary",
      "cobertura",
      "html"
    ],
    "coverageDirectory": "coverage",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "./backend",
          "outputName": "junit.xml"
        }
      ]
    ],
    "globalTeardown": "./teardown.js"
  }
}
